{
  "env": {
    "es2020": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "extends": ["standard", "prettier", "eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "semi": "off",
    "comma-dangle": "off"
  }
}
